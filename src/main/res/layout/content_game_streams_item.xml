<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6000"
    android:layout_marginTop="@dimen/games_margin"
    android:layout_marginBottom="@dimen/games_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/previewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/logo"
        android:layout_alignBottom="@+id/logo"
        android:src="@mipmap/preview" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/blank" />

    <TextView
        android:id="@+id/channel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/logo"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:text="Channel" />

    <ImageView
        android:id="@+id/viewersImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/channel"
        android:layout_toRightOf="@+id/logo"
        android:padding="1dp"
        android:src="@mipmap/viewers" />
    <TextView
        android:id="@+id/viewers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/channel"
        android:layout_toRightOf="@+id/viewersImg"
        android:layout_alignTop="@+id/viewersImg"
        android:layout_alignBottom="@+id/viewersImg"
        android:gravity="center_vertical"
        android:textColor="#FFF"
        android:text="Viewers" />

    <ImageView
        android:id="@+id/updatedImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewersImg"
        android:layout_toRightOf="@+id/logo"
        android:padding="1dp"
        android:src="@mipmap/since" />
    <TextView
        android:id="@+id/updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewers"
        android:layout_toRightOf="@+id/updatedImg"
        android:layout_alignTop="@+id/updatedImg"
        android:layout_alignBottom="@+id/updatedImg"
        android:gravity="center_vertical"
        android:textColor="#FFF"
        android:text="Updated at" />

    <ImageView
        android:id="@+id/statusImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatedImg"
        android:layout_toRightOf="@+id/logo"
        android:padding="1dp"
        android:src="@mipmap/status" />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updated"
        android:layout_toRightOf="@+id/statusImg"
        android:layout_alignTop="@+id/statusImg"
        android:layout_alignBottom="@+id/statusImg"
        android:gravity="center_vertical"
        android:textStyle="italic"
        android:textColor="#FFF"
        android:text="Status" />

    <ImageView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/logo"
        android:layout_alignTop="@+id/logo"
        android:layout_alignBottom="@+id/logo"
        android:visibility="invisible" />

</RelativeLayout>
