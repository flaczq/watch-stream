<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/games_margin"
    android:background="#66CCFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_game_streams"
    tools:context=".activities.GameStreamsActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:cacheColorHint="#66CCFF"
        android:listSelector="@null"
        android:scrollingCache="false"
        android:gravity="center"
        android:horizontalSpacing="@dimen/games_margin"
        android:verticalSpacing="@dimen/games_margin" />

</RelativeLayout>
